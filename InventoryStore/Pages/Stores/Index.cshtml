@model InventoryStore.Pages.Stores.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Open_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Close_Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Store) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Open_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Close_Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
