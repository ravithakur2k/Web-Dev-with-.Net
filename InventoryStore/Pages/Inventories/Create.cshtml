}

<h2>Create</h2>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inventory.InventoryName" class="control-label"></label>
                <input asp-for="Inventory.InventoryName" class="form-control" />
