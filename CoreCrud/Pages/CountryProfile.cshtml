@page
@model CountryProfileModel
@{
}


<div class="row">

    <h1>Country Name - @Model.Country.Name</h1>
    <hr>    
    <div class="col-md-6">
        
        <h3>Destination Details</h3>
        
        @foreach (var des in Model.Country.Destinations) {
            <hr>
        <dl>
            <dd>Destination Name</dd>
            <dt>@des.Name</dt>

            <dd>Travel Date</dd>
            <dt>@des.TravelDate</dt>
            
            <dd>Return Date</dd>
            <dt>@des.ReturnDate</dt>

            <dd>Cost to Travel to Destination</dd>
            <dt>@des.CostToTravelToDestination</dt>
            
            <dd>Was it enjoyable</dd>
            <dt>@des.isEnjoyable</dt>
        </dl>
        }
    </div>
</div>
