@page
@model CoreCrud.Pages.Destinations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    Sometimes it's the journey that teaches you a lot about your destination.
    <small>By Drake</small>
</p>

<img src="https://securecdn.pymnts.com/wp-content/uploads/2014/10/Future.jpg" alt="Future-Image">

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].TravelDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].isEnjoyable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].CostToTravelToDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Destination) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isEnjoyable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostToTravelToDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
