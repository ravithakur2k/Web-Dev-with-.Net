@page
@model CouponInfoModel
@{
}

<div class="row">

    <h1>Coupon Category Name - @Model.CouponCategory.Name</h1>
    <hr>
    <p>Coupon Category Description - @Model.CouponCategory.Description</p>
    <hr>    
    <div class="col-md-6">
        
        <h3>Coupon Information</h3>
        
        @foreach (var cou in Model.CouponCategory.Coupons) {
            <hr>
        <dl>
            <dd>Coupon Name</dd>
            <dt>@cou.Name</dt>

            <dd>Start Date</dd>
            <dt>@cou.ValidDate</dt>
            
            <dd>Expiry Date</dd>
            <dt>@cou.ExpiryDate</dt>

            <dd>Price of the Coupon</dd>
            <dt>@cou.Price</dt>

            <dd>Ratings</dd>
            <dt>@cou.Rating</dt>
        </dl>
        }
    </div>
</div>