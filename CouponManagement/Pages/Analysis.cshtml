@page
@model AnalysisModel
@{
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
            <div class="form-group">
                <label asp-for="AnalysisForm.CustomerId" class="control-label"></label>
                <select asp-for="AnalysisForm.CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="AnalysisForm.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Analyze" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
@if(Model.AnalysisCompleted) {
    <table class="table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Total Coupons</th>
                <th>Total Price</th>
                <th>Min Value Coupon</th>
                <th>Max Value Coupon</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Cst.Count > 0) {
                @foreach(var cst in Model.Cst) {
                    <tr>
                        <td>@cst.Name</td>
                        <td>@cst.Email</td>
                        <td align="center">@Model.CountOfCoupons</td>
                        <td align="center">@Model.TotalPriceOfCoupons</td>
                        <td align="center">@Model.MinPrice</td>
                        <td align="center">@Model.MaxPrice</td>
                    </tr>
                    }
            } else {
                <div class="alert alert-info">
                    <p>No Information Found Against the Customer.</p>
                </div>
            }
    </table>
} else {
}