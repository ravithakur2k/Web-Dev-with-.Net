@page
@model CouponManagement.Pages.Coupons.IndexModel

@{
    ViewData["Title"] = "Coupon Administration";
}

<h2>Coupons</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Validity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Seller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coupon[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Coupon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
